    newFireball = instance_create(x, y, objFireball);
    with(newFireball) {
        nearestPlayer = instance_nearest(x, y, objPCParent);
        xDest = nearestPlayer.x;
        yDest = nearestPlayer.y;
        direction = point_direction(x, y, xDest, yDest);
        image_angle = point_direction(x, y, xDest, yDest);
        image_speed = 0.05;
